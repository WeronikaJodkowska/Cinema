            <TextBox Name="Row3" IsEnabled="True" FontFamily="Comic Sans MS" FontSize="15" TextWrapping="Wrap" Height="40" Width="80" Canvas.Top="170" Canvas.Left="550" Foreground="DarkBlue" BorderBrush="DarkBlue" />
            <TextBox Name="Seat3" IsEnabled="True" FontFamily="Comic Sans MS" FontSize="15" TextWrapping="Wrap" Height="40" Width="80" Canvas.Top="170" Canvas.Left="650" Foreground="DarkBlue" BorderBrush="DarkBlue" />
            <TextBox Name="Row4" IsEnabled="True" FontFamily="Comic Sans MS" FontSize="15" TextWrapping="Wrap" Height="40" Width="80" Canvas.Top="210" Canvas.Left="550" Foreground="DarkBlue" BorderBrush="DarkBlue" />
            <TextBox Name="Seat4" IsEnabled="True" FontFamily="Comic Sans MS" FontSize="15" TextWrapping="Wrap" Height="40" Width="80" Canvas.Top="210" Canvas.Left="650" Foreground="DarkBlue" BorderBrush="DarkBlue" />
            <TextBox Name="Row5" IsEnabled="True" FontFamily="Comic Sans MS" FontSize="15" TextWrapping="Wrap" Height="40" Width="80" Canvas.Top="250" Canvas.Left="550" Foreground="DarkBlue" BorderBrush="DarkBlue" />
            <TextBox Name="Seat5" IsEnabled="True" FontFamily="Comic Sans MS" FontSize="15" TextWrapping="Wrap" Height="40" Width="80" Canvas.Top="250" Canvas.Left="650" Foreground="DarkBlue" BorderBrush="DarkBlue" />
            <TextBox Name="Row6" IsEnabled="True" FontFamily="Comic Sans MS" FontSize="15" TextWrapping="Wrap" Height="40" Width="80" Canvas.Top="290" Canvas.Left="550" Foreground="DarkBlue" BorderBrush="DarkBlue" />
            <TextBox Name="Seat6" IsEnabled="True" FontFamily="Comic Sans MS" FontSize="15" TextWrapping="Wrap" Height="40" Width="80" Canvas.Top="290" Canvas.Left="650" Foreground="DarkBlue" BorderBrush="DarkBlue" />
            <TextBox Name="Row7" IsEnabled="True" FontFamily="Comic Sans MS" FontSize="15" TextWrapping="Wrap" Height="40" Width="80" Canvas.Top="330" Canvas.Left="550" Foreground="DarkBlue" BorderBrush="DarkBlue" />
            <TextBox Name="Seat7" IsEnabled="True" FontFamily="Comic Sans MS" FontSize="15" TextWrapping="Wrap" Height="40" Width="80" Canvas.Top="330" Canvas.Left="650" Foreground="DarkBlue" BorderBrush="DarkBlue" />
            <TextBox Name="Row8" IsEnabled="True" FontFamily="Comic Sans MS" FontSize="15" TextWrapping="Wrap" Height="40" Width="80" Canvas.Top="370" Canvas.Left="550" Foreground="DarkBlue" BorderBrush="DarkBlue" />
            <TextBox Name="Seat8" IsEnabled="True" FontFamily="Comic Sans MS" FontSize="15" TextWrapping="Wrap" Height="40" Width="80" Canvas.Top="370" Canvas.Left="650" Foreground="DarkBlue" BorderBrush="DarkBlue" />
            <TextBox Name="Row9" IsEnabled="True" FontFamily="Comic Sans MS" FontSize="15" TextWrapping="Wrap" Height="40" Width="80" Canvas.Top="410" Canvas.Left="550" Foreground="DarkBlue" BorderBrush="DarkBlue" />
            <TextBox Name="Seat9" IsEnabled="True" FontFamily="Comic Sans MS" FontSize="15" TextWrapping="Wrap" Height="40" Width="80" Canvas.Top="410" Canvas.Left="650" Foreground="DarkBlue" BorderBrush="DarkBlue" />
            <TextBox Name="Row10" IsEnabled="True" FontFamily="Comic Sans MS" FontSize="15" TextWrapping="Wrap" Height="40" Width="80" Canvas.Top="450" Canvas.Left="550" Foreground="DarkBlue" BorderBrush="DarkBlue"/>
            <TextBox Name="Seat10" IsEnabled="True" FontFamily="Comic Sans MS" FontSize="15" TextWrapping="Wrap" Height="40" Width="80" Canvas.Top="450" Canvas.Left="650" Foreground="DarkBlue" BorderBrush="DarkBlue" />

            <Button Content ="Места" FontFamily="Comic Sans MS" Height="40" Width="75" Canvas.Top="464" Canvas.Left="42" Foreground="DarkBlue" Click="FreeSeats"/>
            <Button Content ="Цена" FontFamily="Comic Sans MS" Height="40" Width="75" Canvas.Top="528" Canvas.Left="42" Foreground="DarkBlue" Click="SelectPrice"/>
            <Button Content ="Заказать" FontFamily="Comic Sans MS" Height="40" Width="140" Canvas.Top="612" Canvas.Left="360" Foreground="DarkBlue" Click="Purchase"/>
            <materialDesign:PackIcon Kind="ArrowLeftBoldBoxOutline" Height="50" Width="100" Canvas.Top="612" Canvas.Left="685" MouseDoubleClick="PackIcon_MouseDoubleClick" Foreground="DodgerBlue"/>
        </Canvas>
    </Grid>
</Window>
